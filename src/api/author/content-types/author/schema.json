{
    "kind": "collectionType",
    "collectionName": "authors",
    "info": {
        "singularName": "author",
        "pluralName": "authors",
        "displayName": "Author",
        "description": "Authors for blog posts"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "avatar": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "posts": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::post.post",
            "mappedBy": "authors"
        }
    }
}